variant: fcos
version: 1.5.0
systemd:
  units:
    - name: var-opt-docker.mount
      enabled: true
      contents: | 
        [Unit]
        After=remote-fs.target
        Requires=remote-fs.target
        [Mount]
        What=truenas.home.0n5.us:/mnt/fastdata/docker
        Where=/var/opt/docker
        Type=nfs4
        [Install]
        WantedBy=multi-user.target
        RequiredBy=docker.service
