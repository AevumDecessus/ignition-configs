variant: fcos
version: 1.5.0
systemd:
  units:
    - name: var-opt-docker.mount
      enabled: true
      contents: |
        [Unit]
        Requires=network.target
        [Mount]
        What=truenas.home.0n5.us:/mnt/fastdata/docker/books
        Where=/var/opt/docker
        Type=nfs
        [Install]
        RequiredBy=docker.service
        WantedBy=multi-user.target
