variant: fcos
version: 1.5.0
systemd:
  units:
    - name: var-opt-digikam.mount
      enabled: true
      contents: | 
        [Unit]
        Requires=network-online.target
        [Mount]
        What=truenas.home.0n5.us:/mnt/tank0/digikam
        Where=/var/opt/digikam
        Type=nfs4
        [Install]
        RequiredBy=docker.service
        WantedBy=multi-user.target
